import { NextResponse } from 'next/server'
import { promises as fs } from 'fs'
import path from 'path'

export async function GET(req: Request) {
  try {
    const url = new URL(req.url)
    const postalCode = url.searchParams.get('postalCode')?.trim() || ''
    if (!postalCode) return NextResponse.json({ garages: [] })

    const filePath = path.join(process.cwd(), 'data/garages.json')
    let garagesRaw = ''
    try {
      garagesRaw = await fs.readFile(filePath, 'utf-8')
    } catch (err) {
      console.error('Lecture garages.json échouée :', err)
      return NextResponse.json({ garages: [] })
    }

    let garages: any[] = []
    try {
      garages = JSON.parse(garagesRaw)
    } catch (err) {
      console.error('Parsing JSON échoué :', err)
      return NextResponse.json({ garages: [] })
    }

    const matchedGarages = garages.filter((g: any) =>
      g.postalCodes.some(code => code.replace(/\s/g,'').toUpperCase() === postalCode.replace(/\s/g,'').toUpperCase())
    ).slice(0, 4)

    return NextResponse.json({ garages: matchedGarages })
  } catch (error) {
    console.error('Erreur GET /api/garages :', error)
    return NextResponse.json({ garages: [] })
  }
}
