@tailwind base;
@tailwind components;
@tailwind utilities;

/* === FORM DESIGN SYSTEM === */

.input {
  @apply w-full rounded-xl border border-gray-300 px-4 py-3
         text-gray-800 placeholder-gray-400
         focus:outline-none focus:ring-2 focus:ring-blue-500
         focus:border-blue-500
         transition;
}

.form-card {
  @apply bg-white rounded-3xl shadow-xl p-8 md:p-10;
}

.form-section-title {
  @apply text-lg font-semibold text-gray-800 mb-4;
}
